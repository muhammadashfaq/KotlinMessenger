<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">


<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/colorWhite"
    android:weightSum="6"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="20dp"
            android:src="@drawable/image_login"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_vu_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOGIN"
                android:layout_marginLeft="20dp"
                android:textSize="35sp"
                android:textColor="@color/colorBlack"
                android:focusable="true"
                android:focusableInTouchMode="true">
                <requestFocus />
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <View
                    android:layout_width="4dp"
                    android:layout_height="40dp"
                    android:layout_gravity="start"
                    android:layout_marginLeft="20dp"
                    android:background="#a40404" />

                <TextView
                    android:id="@+id/txt_vu_alert_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="You must be logged in to access this seciton"
                    android:layout_marginLeft="15dp"/>

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/txt_vu_email_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMAIL ADDRESS"
                android:layout_marginLeft="20dp"
                android:textSize="26sp"
                android:layout_marginRight="5dp"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginRight="-30dp"
                android:gravity="start"
                android:layout_gravity="start"
                android:layout_marginLeft="-0dp"
                android:textSize="30sp"
                android:textColor="@color/colorRed"/>

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="5dp"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/txt_vu_password_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PASSWORD"
                android:layout_marginLeft="20dp"
                android:gravity="start"
                android:textSize="26sp"
                android:layout_marginRight="5dp"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginRight="-30dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="-0dp"
                android:textSize="30sp"
                android:textColor="@color/colorRed"/>

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="5dp"
            android:layout_marginTop="5dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/txt_vu_forgot_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Forgot your password ?"
                android:textSize="19sp"
                android:layout_weight="1.2"
                android:textColor="@color/colorRed"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/txt_vu_required_fields"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="*Required Fields"
                android:textSize="18sp"
                android:layout_weight=".8"
                android:textColor="@color/colorRed"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp" />

        </LinearLayout>
        
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:onClick="btnImageLogin"
                android:src="@drawable/btn_image_login">

            </ImageView>
            <TextView
                android:id="@+id/txt_vu_need_to_registed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="need to register ?"
                android:textSize="18sp"
                android:textColor="@color/colorRed" />
        </LinearLayout>
        
    </LinearLayout>



</LinearLayout>
</ScrollView>