<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_home"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="1"
    android:background="@color/colorWhite">



   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight=".4">

       <ImageView
           android:id="@+id/icon"
           android:layout_width="match_parent"
           android:layout_height="150dp"
           android:padding="15dp"
           android:layout_marginTop="20dp"
           android:src="@drawable/image_login"
           />

   </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".6">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_ship"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:background="@drawable/home_button_gradiant"

                android:gravity="center"
                android:onClick="btnShip"
                android:padding="10dp"
                android:text="SHIP"
                android:textColor="@color/colorWhite"
                android:textSize="35sp" />

            <Button
                android:id="@+id/btn_recive"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/home_button_gradiant"
                android:gravity="center"
                android:onClick="btnRecive"
                android:padding="10dp"
                android:text="RECEIVE"
                android:textColor="@color/colorWhite"
                android:textSize="35sp" />

            <Button
                android:id="@+id/btn_quick_ship"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="QUICK SHIP"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="35sp"
                android:layout_marginTop="10dp"
                android:onClick="btnQuickShip"
                android:padding="10dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/home_button_gradiant"/>
            <Button
                android:id="@+id/btn_quick_recieve"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="QUICK RECEIVE"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="35sp"
                android:onClick="btnQuickRecive"
                android:padding="10dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/home_button_gradiant"/>

        </LinearLayout>
    </LinearLayout>



</LinearLayout>